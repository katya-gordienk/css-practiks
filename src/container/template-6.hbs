<header class="header">
    <div>
        {{> logo}}
    </div>

    <nav class="header_nav ">
        {{!-- {{> nav list=header isVertical=true}} --}}
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_text">{{description}}</p>
        {{/with}}
    </div>

    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>

        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}"
                class="form_input">
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>

        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>


{{#with updates}}
<div class="updates">
    <h2 class="updates_title">{{title}}</h2>
    {{#each list}}
    <div class="list">
        <strong class="list_nickname">{{ nickname}}</strong>
        <p class="list_text">{{description}}</p>
    </div>
    {{/each}}
    {{#with show_all}}
    <a href="{{url}}" class="updates_link">{{text}}</a>
    {{/with}}
</div>
{{/with}}

<div class="expirience_section">
    {{#with expirience}}
    <div class="expirience">

        <h2 class="expirience_title">{{title}}</h2>

        <div>
            <span class="expirience_hot">{{badge}}</span>
        </div>

        <div class="expirience_content">
            {{#each list}}
            <div class="expirience_list">
                <div class="expirience_name">{{name}}</div>
                <p class="expirience_text">{{details}}</p>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>
</div>


<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copiright"> &copy; 2023</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>